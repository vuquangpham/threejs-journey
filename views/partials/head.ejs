<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="msapplication-TileColor" content="#f4d8cc">
    <meta name="theme-color" content="#f4d8cc">

    <title><%= `${title} | ${pageTitle}`; %></title>

    <link rel="stylesheet" href="/main.css">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <script src="/main.js" defer></script>
</head>

<% const classes = typeof isHome !== 'undefined' ? 'home' : 'single-page'; %>
<body class="<%= classes ;%>" <%= typeof preloader !== "undefined" ? 'data-preloader' : null ;%>>

<% if (typeof preloader !== "undefined") { %>
    <!-- Preloader -->
    <%- include('./preloader.ejs') %>
<% } %>

<%- include('./aside.ejs'); %>