<%- include('../partials/head.ejs') %>

<div class="site-content" data-template="<%= base; %>" data-page="<%= pageId; %>">
    <style>
        * {
            margin:0;
            padding:0;
        }
        body {
            background:#1e1a20;
        }

        #webgl {
            position:fixed;
            top:0;
            left:0;
            outline:none;
            z-index:-1;
        }

        .section {
            display:flex;
            align-items:center;
            height:100vh;
            position:relative;
            font-family:'Cabin', sans-serif;
            color:#ffeded;
            text-transform:uppercase;
            font-size:7vmin;
            padding-left:10%;
            padding-right:10%;

            --color-heading:#ffeded;
            --size-h1:7vmin;
            --size-h2:7vmin;
        }

        section:nth-child(odd) {
            justify-content:flex-end;
        }
    </style>
    <canvas class="ps-fixed t0 l0" id="webgl"></canvas>
    <section class="section">
        <h1>My Portfolio</h1>
    </section>
    <section class="section">
        <h2>My projects</h2>
    </section>
    <section class="section">
        <h2>Contact me</h2>
    </section>
</div>

<%- include('../partials/end.ejs') %>